@model IEnumerable<Eshop.Models.Domain.Tbl_Messages>

@{
    ViewBag.Title = "ReadedMessage";
    Layout = "~/Views/Shared/_Index.cshtml";
    Eshop.Models.Domain.DataBase db = new Eshop.Models.Domain.DataBase();
}

@if (Model != null)
{

    <div id="content">
        <div id="posts" class="teal masonry" style="position: relative; height: 182px;">

            <div style="padding:5px;margin:5px;font-family:Tahoma;text-align:right;direction:rtl;">

                <table class="table">

                    <tr>
                        <td>
                            گیرنده
                        </td>
                        <td>
                            عنوان پیام
                        </td>
                    </tr>

                    @foreach (var item in Model)
                    {
                        string Style = "";
                        if (item.Read == false)
                        { Style = "font-weight:700;"; }

                        <tr style="@Style">


                            <td style="width:150px;">
                                @db.Tbl_Users.Where(a => a.ID == item.UserGet).SingleOrDefault().UserName
                            </td>

                            <td style="width:150px;">
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>


                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
}
else { 
            <p>موردی یافت نشد</p>
}