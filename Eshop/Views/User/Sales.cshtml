@model IEnumerable<Eshop.Models.Domain.Tbl_Sales>

@{
    ViewBag.Title = "Sales";
    Layout = "~/Views/Shared/_Index.cshtml";
}



<div id="content">
    <div id="posts" class="teal masonry" style="position: relative; height: 182px;">

        <div style="padding:5px;margin:5px;font-family:Tahoma;text-align:right;direction:rtl;">

            <table class="table">
                <tr>
                    <th style="width:170px;">
                        نام محصول
                    </th>
                    <th style="width:170px;">
                        مشتری
                    </th>
                    <th style="width:100px;">
                        قیمت
                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Tbl_Products.Title
                        </td>
                        <td>
                            @item.Tbl_Users.Name
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>

                        <td>
                            @Html.ActionLink("جزییات", "DetailsSales", new { id = item.ID }) |
                            @Html.ActionLink("حذف", "DeleteSales", new { id = item.ID })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>