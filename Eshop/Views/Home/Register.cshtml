@model Eshop.Models.Domain.Tbl_Users

@{
    ViewBag.Title = "ثبت نام";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div id="content">
    <div id="posts" class="teal masonry" style="position: relative; height: 182px;">
        <div style="text-align: center; padding: 5px; border: 1px solid red;@ViewBag.style">
            @ViewBag.Message
        </div>

        @using (Html.BeginForm("Register","Home",FormMethod.Post,new { enctype="multipart/form-data" }))
